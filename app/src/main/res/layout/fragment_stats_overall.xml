                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:text="16/11/2022"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:fontFamily="@font/metropolis_regular"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:text="$12,470"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:fontFamily="@font/metropolis_regular"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:text="Pedido 11-MS"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:fontFamily="@font/metropolis_regular"
                            android:textColor="@color/white" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CV 1 - 0 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/bg_general_stats">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:text="Lo más vendido"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:fontFamily="@font/metropolis_semibold"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:text="Las Tres Torrecitas"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:fontFamily="@font/metropolis_regular"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:text="19 vendidos"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:fontFamily="@font/metropolis_regular"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:text="31 en existencia"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:fontFamily="@font/metropolis_regular"
                            android:textColor="@color/white" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CV 1 - 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/bg_general_stats">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:text="Lo menos vendido"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:fontFamily="@font/metropolis_semibold"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:text="Quetzalcóatl"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:fontFamily="@font/metropolis_regular"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:text="4 vendidos"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:fontFamily="@font/metropolis_regular"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:text="16 en existencia"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:fontFamily="@font/metropolis_regular"
                            android:textColor="@color/white" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#874FEA"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/background"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ventas del mes: $24,795"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_money"
                    android:textColor="@color/mainText"
                    android:fontFamily="@font/metropolis_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_money"
                    android:text="Histórico del total de ventas: $24,795"
                    android:textSize="16sp"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/mainText"
                    android:fontFamily="@font/metropolis_regular"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#874FEA"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_orders_stats"
                    android:text=" Pedidos del mes: 16"
                    android:textSize="16sp"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/mainText"
                    android:fontFamily="@font/metropolis_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_orders_stats"
                    android:text=" Histórico de pedidos entregados: 15"
                    android:textSize="16sp"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/mainText"
                    android:fontFamily="@font/metropolis_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_orders_stats"
                    android:text=" Histórico de pedidos: 16"
                    android:textSize="16sp"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/mainText"
                    android:fontFamily="@font/metropolis_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_orders_stats"
                    android:text=" Histórico de devoluciones: 0"
                    android:textSize="16sp"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/mainText"
                    android:fontFamily="@font/metropolis_regular"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#874FEA"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_cupon_discount"
                    android:text=" Cupones generados en el mes: 6"
                    android:textSize="16sp"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/mainText"
                    android:fontFamily="@font/metropolis_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_cupon_discount"
                    android:text=" Histórico de cupones generados: 6"
                    android:textSize="16sp"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/mainText"
                    android:fontFamily="@font/metropolis_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_cupon_discount"
                    android:text=" Histórico de cupones usados: 4"
                    android:textSize="16sp"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/mainText"
                    android:fontFamily="@font/metropolis_regular"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#874FEA"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_star_circled"
                    android:text=" Reseñas del mes: 9"
                    android:textSize="16sp"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/mainText"
                    android:fontFamily="@font/metropolis_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_star_circled"
                    android:text=" Histórico de reseñas: 9"
                    android:textSize="16sp"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/mainText"
                    android:fontFamily="@font/metropolis_regular"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>