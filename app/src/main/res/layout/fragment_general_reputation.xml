<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Fragment.GeneralReputationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taller TonaYork"
                    android:textColor="@color/mainText"
                    android:fontFamily="@font/metropolis_bold"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_tona_york"
                    android:scaleType="fitXY"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.7 de 5"
                    android:layout_marginStart="80dp"
                    android:textColor="@color/mainText"
                    android:textSize="16sp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/metropolis_regular"/>

                <RatingBar
                    android:id="@+id/productRating_singleProduct"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:rating="4.7"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:transformPivotX="0dp"
                    android:transformPivotY="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total de reseñas: 21"
                    android:textSize="16sp"
                    android:textColor="@color/mainText"
                    android:fontFamily="@font/metropolis_regular"/>

            </LinearLayout>

            <!--VENDEDOR #103-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewOrders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:background="@drawable/bg_options"
                android:backgroundTint="@color/background"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/llCardViewRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_options"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvExpandOrders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vendedor #103"
                        android:fontFamily="@font/metropolis_semibold"
                        android:textSize="18sp"
                        android:textColor="@color/mainText"/>

                    <RelativeLayout
                        android:id="@+id/expandableLayoutOrders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre: Miguel Ángel Barbosa Vela"
                                android:textSize="14sp"
                                android:fontFamily="@font/metropolis_regular"
                                android:textColor="@color/mainText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:text="Calificación: 4.5 de 5"
                                android:textSize="14sp"
                                android:fontFamily="@font/metropolis_regular"
                                android:textColor="@color/mainText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total de reseñas: 9"
                                android:textSize="14sp"
                                android:fontFamily="@font/metropolis_regular"
                                android:textColor="@color/mainText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Opinión general de los clientes: buen servicio, atención rápida, mucha variedad de productos."
                                android:textSize="14sp"
                                android:fontFamily="@font/metropolis_regular"
                                android:textColor="@color/mainText" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#874FEA"
                            android:layout_marginTop="135dp" />


                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

